# Attendance Management System Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Choose database type: 'sqlite' (default, easier setup) or 'postgresql'
DB_TYPE=sqlite

# SQLite Configuration (default - no additional setup required)
DATABASE_URL=sqlite:///attendance.db

# PostgreSQL Configuration (optional - requires PostgreSQL server)
# DB_TYPE=postgresql
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=attendance_db

# ========================================
# FLASK CONFIGURATION
# ========================================
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_NAME=Attendance Management System
APP_VERSION=1.0.0

# ========================================
# EMAIL CONFIGURATION (SMTP)
# ========================================
# SMTP Server (Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Gmail account for sending emails
# Note: Use App Password for Gmail (not your regular password)
# How to get App Password: https://support.google.com/accounts/answer/185833
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email address shown in "From" field
MAIL_FROM=your_email@gmail.com

# HR email to receive leave request notifications (used by email utilities)
HR_EMAIL=hr@company.com

# Default HR email for system configuration (used by Flask config)
# IMPORTANT: Must be set for email notifications to work
DEFAULT_HR_EMAIL=hr@company.com

# Enable/disable actual email sending (set to False for testing)
ENABLE_EMAIL_SENDING=True

# Use company email for all outgoing emails (recommended)
# If True: all emails sent from MAIL_FROM
# If False: emails sent from individual employee email addresses
USE_COMPANY_EMAIL_ONLY=True

# ========================================
# TELEGRAM BOT CONFIGURATION (Optional)
# ========================================
# Leave empty if not using Telegram notifications
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ========================================
# SIGNATURE ENCRYPTION
# ========================================
# Fernet encryption key for signature security
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SIGNATURE_SECRET_KEY=your_fernet_key_here
